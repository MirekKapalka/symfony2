{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
<h1>Index Page of MicroPost Website</h1>
<div>
    {% if posts|length>0 %}
        {% for post in posts %}
            <div>
                <a href="{{ path('app_micro_post_show', {post: post.id} ) }}">
                    {{ post.title }}

                    {{post.id}}
                </a>
            </div>


        {% endfor %}
    {% else %}
        There is nothing yet
    {% endif %}

    </div>


{% endblock %}
